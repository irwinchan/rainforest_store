<% if @review.errors.present? %>
  $("#review-form-errors").html("<%= j (render(:partial => '/products/review_form_errors')) %>");
<% else %>
  $("review-form-errors").html("");
  $("#review-list .review:last-child").css("background-color", "");
  $("#review-list").append("<%= j (render @review) %>");
  $('html, body').animate({
        scrollTop: $("#review-list .review:last-child").offset().top
    }, 500, function(){
      $("#review-list .review:last-child").css("background-color", "yellow");
    });

  $("#new_review")[0].reset();
<% end %>
