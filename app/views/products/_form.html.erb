<%= form_for @product do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <%= render partial: 'shared/flash', locals: { object: @product } %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :price_in_cents %><br>
    <%= f.text_area :price_in_cents %>
  </div>

  <div class="field">
  <h2>Categories</h2>
    <%= f.fields_for :categories do |cat_form| %>
      <%= cat_form.label :name %>
      <%= cat_form.text_field :name %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>